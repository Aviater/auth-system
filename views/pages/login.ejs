<%- include('../partials/header') %>

<div class="container">
    <div class="bm-wrapper">
        <h3>Please log in to continue</h3>
        <form class="bm-form" action="/login" method="POST">
            <div class="form-group">
                <label for="bm-login-password">Username:</label>
                <input required name="username" type="email" class="form-control" id="bm-from-username">
            </div>
            <div class="form-group">
                <label for="bm-login-password">Password:</label>
                <input required name="password" type="password" class="form-control" id="bm-from-password">
                <a href="/reset-password">
                    <small id="emailHelp" class="form-text text-muted">I forgot my password!</small>
                </a>
            </div>
            <button type="submit" class="btn btn-primary">Log in</button>
        </form> 
    </div>
</div>

<%- include('../partials/footer') %>